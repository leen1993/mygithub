body {
	/* background: url(images/bg_login.jpg) repeat;  */
	/* background: url(images/bg_login3.png) repeat; */
	margin: 0;
	background: url(images/bg_login4.png) no-repeat center fixed;
	background-position: center center;
	font-family: 'Microsoft Yahei', verdana;
	font-size: 12px;
	width: 100%;
	height: 100%;
	line-height: 42px;
}

.bpmlogo_login {
	background: url(images/bpmlogo_login.png) no-repeat;
	width: 300px;
	height: 69px;
	display: inline-block;
	margin-left: 28px;
	margin-bottom: 20px;
}

.main_login, .main_login2 {
	text-align: left;
	margin: 6% auto;
}

.left_logo {
	left: 10px;
	position: absolute;
	top: 5px;
	width: 300px;
	z-index: 100;
}

.login-title {
	text-align: center;
	height: 60px;
	line-height: 75px;
	font-size: 23px;
	color: #333;
	font-family: 'microsoft yahei', Microsoft YaHei, STXihei, SimHei, SimSun,
		sans-serif;
}

.content_login {
	/* background: #43CD80; border: solid 1px #d4d4d4; border-radius: 5px; padding: 25px 35px; */
	position: absolute;
	margin-top: -140px;
	margin-left: -200px;
	left: 50%;
	top: 50%;
	width: 400px;
	height: 280px;
	/* position: relative; */
	padding: 0 45px;
	filter: Alpha(opacity = 60);
	opacity: 0.9;
	background: #eef5fb; /*#eef5fb;*/
	border: solid 1px #e0e2e7;
	border-radius: 8px;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	box-shadow: 2px 2px 5px #5c5c5c;
}

input {
	border-radius: 0px;
	border: 0px;
	padding: 0 5px;
	background-color: #fff !important;
	font-size: 30px;
	position: relative;
	margin: 0 0 0 55px;
	padding: 0;
	outline: none;
	width: 273px;
	height: 42px;
	line-height: 42px\9;
}

.content_login .vcode input[type="text"] {
	width: 130px;
}

.vcode div {
	width: 100px;
	display: inline-block;
}

.vcode {
	width: 300px;
	display: inline-block;
}

.column {
	margin: 3px 0;
	text-align: center;
}

.vcode_img {
	vertical-align: top;
	margin-left: 65px;
}

.vcode_img img {
	width: 82px;
	padding: 13px 0px 5px;
}

.vcode_img a {
	line-height: 25px;
	color: #4b93ff;
	cursor: pointer;
}

.confirm {
	padding: 10px 35px 1px;
}

.login_btn {
	width: 330px;
	color: #fff;
	background-color: #007aff;
	height: 42px;
	display: block;
	text-align: center;
	line-height: 42px;
	font-size: 18px;
	border-radius: 2px;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	cursor: pointer !important;
	text-decoration: none;
	outline: none;
	display: inline-block;
	/* font-weight:bold; */
	font-family: 'microsoft yahei', Microsoft YaHei, STXihei, SimHei, SimSun,
		sans-serif;
}

a:hover.login_btn {
	background-color: #0662c7;
}

::-webkit-input-placeholder {
	color: gray;
	background-color: #fff;
	font-size: 16px;
	padding-top: 10px;
}

::-moz-placeholder {
	/* color:#090; */
	color: gray;
	background-color: #fff;
	font-size: 16px;
	padding-top: 10px;
}

div.login-input-username {
	background: #ffffff url('images/login_input.png') no-repeat 20px 10px;
	width: 330px;
}

div.login-input-password {
	background: #ffffff url('images/login_input.png') no-repeat 20px -50px;
	width: 330px;
}

div.login-input {
	position: relative;
	border-radius: 2px;
	/* margin: 8px 0; */
	padding: 0;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	border: solid 1px #bdd9f4;
	text-align: center;
	margin: 0 auto;
	margin-top: 10px;
}

div.login-input:focus {
	color: #666;
	border-color: #31b968;
	background: #eef1f3;
}
/* input:not([type=button]):focus{color:#666;border-color:#31b968;background:#eef1f3} */
.confirm input[type="checkbox"] {
	margin-top: 10px;
	margin-right: 5px;
}

.copy {
	clear: both;
	width: 100%;
	height: 60px;
	margin: 0 auto;
	text-align: center;
	background: #0089c8; /*#91d3ef;#515151*/
	color: white;
	position: absolute;
	bottom: 0;
	padding-top: 20px;
	/* border-top:1px solid #FFFFFF; */
}

.main_login {
	width: 364px;
}

input:-webkit-autofill {
	-webkit-box-shadow: 0 0 0px 1000px white inset;
	background-color: #fff;
	background-image: none;
	color: #000;
}