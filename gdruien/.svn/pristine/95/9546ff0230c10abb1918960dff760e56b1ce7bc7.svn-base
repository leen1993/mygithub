html, body {
	margin: 0;
	padding: 0;
	border: 0;
	width: 100%;
	height: 100%;
	/* overflow: hidden; */
	scrollbar-face-color: #D8ECF0;
	scrollbar-3dlight-color: #B7DAE1;
	scrollbar-highlight-color: #E9F1F3;
	scrollbar-shadow-color: #FFFFFF;
	font-family: "Segoe UI", Arial, "Microsoft Yahei", sans-serif;
	font-size: 15px;
}

